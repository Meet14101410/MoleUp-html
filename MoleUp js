let score = 0;
let q = [
  {ques:"Moles in 44 g CO‚ÇÇ?", ans:1},
  {ques:"Moles in 18 g H‚ÇÇO?", ans:1},
  {ques:"Moles in 22 g CO‚ÇÇ?", ans:0.5}
];
let i = 0;

function check(){
  let a = document.getElementById("ans").value;
  if(a == q[i].ans){
    score++;
    result.innerText = "Correct üéâ Score: " + score;
  }else{
    result.innerText = "Wrong ‚ùå Answer: " + q[i].ans;
  }
  i = (i+1) % q.length;
  document.querySelector("p").innerText = q[i].ques;
  ans.value = "";
}
